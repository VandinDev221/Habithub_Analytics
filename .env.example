# ===========================================
# Habithub Analytics - Variáveis de Ambiente
# ===========================================
# Copie para .env e preencha os valores

# ---------- Backend (Express) ----------
NODE_ENV=development
PORT=4000
API_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# ---------- Frontend (Next.js) ----------
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---------- NextAuth ----------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ---------- PostgreSQL ----------
DATABASE_URL=postgresql://habithub:habithub@localhost:5432/habithub
# RUN_MIGRATE_SECRET: opcional; usado para rodar migrações via POST /api/db-migrate (Bearer token). Só em produção (Railway) se o start não rodar db:migrate.
PG_HOST=localhost
PG_PORT=5432
PG_USER=habithub
PG_PASSWORD=habithub
PG_DATABASE=habithub

# ---------- MongoDB (logs/analytics) ----------
MONGODB_URI=mongodb://localhost:27017/habithub_analytics

# ---------- Redis (cache/sessions) ----------
REDIS_URL=redis://localhost:6379

# ---------- JWT (backend) ----------
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# ---------- IA / ML (opcional) ----------
# OPENAI_API_KEY: obrigatória para "Pergunte sobre seus hábitos" (POST /api/ai/ask). Modelo: OPENAI_MODEL (default gpt-4o-mini).
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
ML_SERVICE_URL=http://localhost:5000

# ---------- Web Push (notificações) ----------
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# ---------- Admin ----------
ADMIN_EMAILS=admin@example.com

